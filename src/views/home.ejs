<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%- include('./partials/head.ejs') %>

  <body>
    <!-- HEADER -->
    <%- include('./partials/header.ejs') %>

      <main>
        <!-- Hero -->
        <section class="banner">
          <div class="container banner__wrapper">
            <h2 class="banner__h2">Nuevos Ingresos</h2>
            <p class="banner__txt">
              Descubrí el próximo Funko Pop de tu colección
            </p>
            <a href="/shop" class="banner__boton">SHOP</a>
          </div>
        </section>

        <!-- Colecciones -->
        <section class="container colecciones">
          <% colecciones.forEach(producto=> { %>
            <div class="coleccion__card">
              <div>
                <div class="coleccion__card-info">
                  <h3>
                    <%=producto.licencia %>
                  </h3>
                  <p>
                    <%=producto.descripcion %>
                  </p>
                </div>
                <a href="/shop">Ver Colección</a>
              </div>
              <img src=<%=producto.imagenCara %> alt=<%=producto.nombre %> />
            </div>
            <% }) %>

        </section>

        <!-- Ultimos lanzamientos -->
        <section class="lanzamientos container">
          <h2 class="lanzamientos__title">Últimos lanzamientos</h2>
          <div class="glide">
            <div data-glide-el="track" class="glide__track">
              <ul class="lanzamientos__list glide__slides">
                <% lanzamientos.forEach(producto=> { %>
                  <li class="lanzamientos__card glide__slide">
                    <a href="/shop/item/<%=producto.id%>">
                      <span class="card__span">Nuevo</span>
                      <picture class="card__picture">
                        <img class="card__image" onmouseover="this.src='<%=producto.imagenDorso%>'"
                          onmouseout="this.src='<%=producto.imagenCara%>'" src=<%=producto.imagenCara%>
                        alt=<%=producto.nombre%> />
                      </picture>
                      <div class="card__info">
                        <p class="card__category">
                          <%=producto.licencia%>
                        </p>
                        <h3 class="card__title">
                          <%=producto.nombre%>
                        </h3>
                        <p class="card__price">
                          <%=producto.precio.toFixed(2)%>
                        </p>
                        <p class="card__payments">
                          <%=producto.cuotas%> CUOTAS SIN INTERÉS
                        </p>
                      </div>
                    </a>
                  </li>

                  <% }) %>
              </ul>
            </div>
            <div class="glide__arrows" data-glide-el="controls">
              <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-left" width="24"
                  height="24" viewBox="0 0 24 24" stroke-width="2" stroke="gray" fill="none" stroke-linecap="round"
                  stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M15 6l-6 6l6 6"></path>
                </svg>
              </button>
              <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-right" width="24"
                  height="24" viewBox="0 0 24 24" stroke-width="2" stroke="gray" fill="none" stroke-linecap="round"
                  stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M9 6l6 6l-6 6"></path>
                </svg>
              </button>
            </div>
          </div>
        </section>
      </main>

      <!-- FOOTER -->
      <%- include('./partials/footer.ejs') %>

        <!-- SCRIPTS -->
        <%- include('./partials/scripts.ejs') %>
  </body>

</html>